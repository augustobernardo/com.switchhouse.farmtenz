<mvc:View controllerName="com.switchhouse.farmtenz.controller.Login" height="100%"
  xmlns="sap.m"
  xmlns:tnt="sap.tnt"
  xmlns:f="sap.f"
  xmlns:card="sap.f.cards"
  xmlns:core="sap.ui.core"
  xmlns:mvc="sap.ui.core.mvc">

  <Page id="pageLogin" showHeader="false">
    <content>
      <VBox id="vboxLogin" justifyContent="Center" alignContent="Center" alignItems="Center" class="sapUiLargeMarginTop">
        <Title id="titleLogin" class="sapUiSmallMarginBottom sapUiLargeMarginTop" text="{i18n>title}" level="H1" titleStyle="H2" textAlign="Center"/>

        <f:Card id="cardLogin">
          <f:header>
            <card:Header id="cardHeaderLogin" title="Login" subtitle="Para entrar no sistema, faça o login com seu usuário e senha."/>
          </f:header>
          <f:content>
            <VBox id="lblFormLogin" class="sapUiSmallMargin" width="100%">
              <Label id="lblEmail" text="Email" required="true" />
              <Input id="email" type="Email" value="{/email}" />

              <Label id="lblPass" text="Senha" required="true" />
              <Input id="password" type="Password" value="{/password}" />

              <HBox id="hboxRememberForgot" class="sapUiSmallMarginTop" width="100%" justifyContent="SpaceBetween">
                <CheckBox id="remember" text="Lembrar de mim" selected="{/RememberMe}"/>
                <Link id="forgot" text="Esqueci minha senha" press="onForgot" class="sapUiTinyMarginTop" />
              </HBox>

              <VBox id="vboxBtnLogin" width="100%" class="sapUiTinyMarginTop" justifyContent="Center" alignContent="Center" alignItems="Center">
                <Button id="btnLogin" width="15rem" type="Emphasized" text="Entrar" press="onLogin" />
              </VBox>

              <HBox id="hboxRegister" width="100%" justifyContent="Center">
                <Text id="textRegister" text="Não tem uma conta?" class="sapUiSmallMarginTop" />
                <ToolbarSpacer id="toolbarSpacer" width="0.2rem"/>
                <Link id="linkRegister" text="Cadastre-se" press="onRouteRegister" class="sapUiSmallMarginTop" />
              </HBox>
            </VBox>
          </f:content>
        </f:Card>
      </VBox>
    </content>
  </Page>
</mvc:View>
